<h2>Register</h2>

<% if @errors %>
  <% @errors.each do |err| %>
    <div><%= err %></div>
  <% end %>
<% end %>

<div class="register-form">
  <form id="register-new-user" action="/users/new" method="post">
    <input type="text" name="user[email]" placeholder="Email"><br>
    <input type="text" name="user[username]" placeholder="Username"><br>
    <input type="password" name="user[password]" placeholder="Password"><br>
    <input type="submit" value="Create Account">
  </form>
